<view>
  <view class="cu-custom" style="height:{{CustomBar}}px;">
    <view class="cu-bar fixed bg-gradual-pink" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
      <navigator class='action' open-type="navigateBack" delta="1" hover-class="none">
        个人中心
      </navigator>
    </view>
  </view>
  <!--me.wxml  -->
  <view class="container page4">
    <view class="mePic">
      <image src="{{avatarUrl}}"></image>
      <text>{{nickName}}</text>
    </view>
    <view class="cu-list menu">
      <view class="cu-item">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>用户积分</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm' style='font-size:28rpx;color:#fa5c0d;'>{{users.userProfile.currentPoint}}</text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>我的订单</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm'></text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>我的快递</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm'></text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>我的外卖</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm'></text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>我的转转</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm'></text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>地址管理</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm'></text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>快递查询</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm'></text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class='content'>
          <text class='text-green'></text>
          <text class='text-grey'>商务合作</text>
        </view>
        <view class='action'>
          <text class='text-grey text-sm'></text>
        </view>
      </view>
    </view>
  </view>
</view>